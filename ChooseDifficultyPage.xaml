<Page x:Class="Sudoku.ChooseDifficultyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ChooseDifficultyPage"
      Width="750"
      Height="610">

    <Grid>
        <Slider Maximum="7"
                Minimum="0"
                Margin="20,30,20,550"
                SmallChange="1"
                LargeChange="1"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                TickPlacement="BottomRight"
                ValueChanged="DifficlutySlider_ValueChanged"
                x:Name="DifficlutySlider"/>

        <Button Content="Start"
                HorizontalAlignment="Left"
                Margin="630,540,0,0"
                VerticalAlignment="Top"
                x:Name="StartButton"
                Click="StartButton_Click"/>

        <Label Content=""
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Height="445"
               Width="675"
               x:Name="ExplanationLabel"
               FontSize="24"/>
    </Grid>
</Page>

<Page x:Class="Sudoku.ChooseDifficultyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="ChooseDifficultyPage"
      Width="750"
      Height="610">

    <Grid>
        <Frame x:Name="DifficultyFrame"
               NavigationUIVisibility="Hidden"
               Navigating="Frame_Navigating"/>


        <Button HorizontalAlignment="Left"
                VerticalAlignment="Center"
                x:Name="BeforeButton" Click="BeforeButton_Click">
            <DockPanel>
                <materialDesign:PackIcon Kind="NavigateBefore"/>
            </DockPanel>
        </Button>
        
        <Button HorizontalAlignment="Right"
                VerticalAlignment="Center"
                x:Name="NextButton">
            <DockPanel>
                <materialDesign:PackIcon Kind="NavigateNext"/>
            </DockPanel>
        </Button>
    </Grid>
</Page>
